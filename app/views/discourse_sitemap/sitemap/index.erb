<%= render partial: 'discourse_sitemap/sitemap/header' %>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <% 1.upto(@size) do |i| %>
   <sitemap>
      <loc><%= Discourse.base_url %>/sitemap/<%= i %>.xml</loc>
      <lastmod><%= @lastmod.xmlschema %></lastmod>
   </sitemap>
   <% end %>
   <sitemap>
      <loc><%= Discourse.base_url %>/sitemap/recent.xml</loc>
      <lastmod><%= 1.minute.ago %></lastmod>
      <changefreq>always</changefreq>
   </sitemap>
</sitemapindex>
